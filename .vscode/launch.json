    //     ],
    //     "pipeCwd": "${workspaceFolder}",
    //     "quoteArgs": false,
    //     "debuggerPath": "/vsdbg"
    //   }
    // },
    {
      "name": "Attach to Docker (Linux)",
      "type": "coreclr",
      "request": "attach",
      "processId": "${command:pickRemoteProcess}",
      "pipeTransport": {
        "pipeProgram": "docker",
        "pipeArgs": [
          "exec",
          "-i",
          "lexiq-backend"
        ],
        "pipeCwd": "${workspaceFolder}",
        "quoteArgs": false,
        "debuggerPath": "/app/vsdbg/vsdbg"
      },
      "sourceFileMap": {
        "/app": "${workspaceFolder}/src"
      }
    },
  ]
}