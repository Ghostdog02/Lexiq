FROM mcr.microsoft.com/dotnet/sdk:10.0 AS publish
WORKDIR /src

COPY *.sln ./
COPY Backend.Api.csproj ./
COPY Database/Backend.Database.csproj ./Database/

RUN dotnet restore ./Backend.Api.csproj

COPY . .
RUN dotnet publish "Backend.Api.csproj" -c Release -o /app/publish /p:UseAppHost=false

FROM mcr.microsoft.com/dotnet/aspnet:10.0 AS final
WORKDIR /app

RUN apt-get update && \
    apt-get install -y --no-install-recommends curl && \
    rm -rf /var/lib/apt/lists/*

COPY --from=publish /app/publish .

# Create upload directory structure for file storage
RUN mkdir -p /app/wwwroot/uploads/images \
             /app/wwwroot/uploads/documents \
             /app/wwwroot/uploads/videos \
             /app/wwwroot/uploads/audio \
             /app/wwwroot/uploads/files && \
    chmod -R 755 /app/wwwroot

EXPOSE 8080

ENTRYPOINT ["dotnet", "Backend.Api.dll"]